<MudDrawer @bind-Open="@Open" Elevation="1" Variant="@DrawerVariant.Mini" style="@Style">
    <MudNavMenu>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Home" Href="">Home</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.BarChart" Href="stats">Statistics</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Check" Href="requests">Requests</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public bool Open { get; set; } = false;

    [Parameter]
    public string? Style { get; set; }
}