@rendermode InteractiveServer
@using Requeceptor.Domain

<RadzenTemplateForm TItem="RuleRecord" Data="@ViewModel" Submit="@Submit" Visible="@(ViewModel != null)">
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="Request">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Enabled" Component="Enabled" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenCheckBox Name="Enabled" @bind-Value="ViewModel.Enabled" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Method" Component="Method" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenDropDown @bind-Value="ViewModel.Method" AllowClear="true" Placeholder="Select something" Data="@_methods" Style="width: 100%;" Name="Method"></RadzenDropDown>
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Path" Component="Path" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenTextBox Style="width: 100%;" Name="Path" @bind-Value="ViewModel.Path" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Query" Component="QueryString" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenTextBox Style="width: 100%;" Name="QueryString" @bind-Value="ViewModel.QueryString" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Description" Component="Description" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenTextArea Style="width:100%;height:20em" Name="Description" @bind-Value="ViewModel.Description" />
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenTabsItem>

            <RadzenTabsItem Text="Response">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Status" Component="ResponseStatus" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenDropDown @bind-Value="ViewModel.ResponseStatus" AllowClear="true" Placeholder="Select something" Data="@_httpStatuses" Style="width: 100%;" Name="ResponseStatus"></RadzenDropDown>
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Content Type" Component="ResponseContentType" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenTextBox Style="width: 100%;" Name="ResponseContentType" @bind-Value="ViewModel.ResponseContentType" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="2">
                            <RadzenLabel Text="Body" Component="ResponseBody" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="10">
                            <RadzenTextArea Style="width:100%;height:20em" Name="ResponseBody" @bind-Value="ViewModel.ResponseBody" />
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

  
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem" class="rz-mt-8 rz-mb-4">
        <RadzenButton ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Icon="save" Text="Save" Disabled="@(ViewModel == null)" />
        <RadzenButton ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Large" Icon="cancel" Text="Cancel" Disabled="@(ViewModel == null)" Click="@Cancel" />
    </RadzenStack>
</RadzenTemplateForm>